!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Museo-Lyrics
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"}
    %link{:href => "https://fonts.googleapis.com/css?family=Fjalla+One", :rel => "stylesheet", :type => "text/css"}/
  %body{:style => "background-color: indigo;"}
    %br/
    .container
      %nav.navbar.navbar-default
        .container-fluid
          .navbar-header
            %a.navbar-brand{:href => "/"}
              .logo
                %p.logo_text Museo-Lyrics
            %br/
          %ul.nav.navbar-nav.navbar-brand
            - if !current_user
              %li{:style => "font-size: 70%; display: inline-block; font-family: 'Fjalla One', sans-serif;"}
                %a{:href => "/"} Home
              %li{:style => "font-size: 70%; display: inline-block; font-family: 'Fjalla One', sans-serif;"}
                %a{:href => "/login"} Login
              %li{:style => "font-size: 70%; display: inline-block; font-family: 'Fjalla One', sans-serif;"}
                %a{:href => "/users/new"} Sign Up
            - else
              %li{:style => "font-size: 70%; display: inline-block; font-family: 'Fjalla One', sans-serif;"}
                %a{:href => "/users/#{current_user.id}"} Songs
              %li{:style => "font-size: 70%; display: inline-block; font-family: 'Fjalla One', sans-serif;"}
                %a{:href => "/songs/new"} Add Song
              %li{:style => "font-size: 70%; display: inline-block; font-family: 'Fjalla One', sans-serif;"}
                %a{:href => "/users/#{current_user.id}/edit"} Edit Profile
              %li{:style => "font-size: 70%; display: inline-block; font-family: 'Fjalla One', sans-serif;"}= link_to "Logout", "/logout", method: :delete
      = yield
