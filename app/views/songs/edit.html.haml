#links
  = link_to "Delete Song", song_path, method: :destroy, :class => "delete_song", data: {confirm: "Delete this song?"}
%strong
  %u{:style => "color: ghostwhite;"}
    %h1.add_song Edit Song
= form_for @song do |f|
  - if @song.errors.any?
    .error_messages
      %h2 Form is invalid
      %ul
        - for message in @song.errors.full_messages
          %li= message
  #container
    .field
      .row
        = f.label :artist
      .text_row
        = f.text_field :artist
      %br/
    .field
      .row
        = f.label :title
      .text_row
        = f.text_field :title
      %br/
    .field
      .row
        = f.label :lyrics
      .text_row
        = f.text_area :lyric, :rows => 20, :cols => 70
    .actions= f.submit
